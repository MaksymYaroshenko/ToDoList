@{
    ViewData["Title"] = "Home Page";
}

<div class="index-container">
    <form asp-action="Index" nethod="post" class="form-horizontal">
        <div class="row">
            <div class="col-sm-2">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="#">All tasks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Important</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Done</a>
                    </li>
                </ul>
                <hr class="d-sm-none">
            </div>
            <div class="col-sm-8">
                <h2 class="text-primary">Tasks</h2>
                <div class="form-group">
                    <button class="btn btn-primary" id="add-icon" onClick="add_new_task_click()">
                        Add a task
                        <i class="icon " aria-hidden="true"></i>
                    </button>
                </div>
                <div class="form-group">
                    <div class="input-group mb-3" id="new-task" style="display:none">
                        <input type="text" class="form-control" placeholder="Enter your task" id="new-task-input">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" id="new-task-btn">Add new Task</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
